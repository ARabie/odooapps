<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@name='invoice_address']" position="replace">
            <div class="col-xs-4 pull-left">
                <div>
                    <address t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" class="mt16"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></div>
                </div>
            </div>
            <div class="col-xs-4 pull-right">
                <img t-if="o.l10n_sa_qr_code_str"
                     style="display:block;margin:10% auto 0 auto;"
                     t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.l10n_sa_qr_code_str, 150, 150)"/>
            </div>
        </xpath>
    </template>

</odoo>
