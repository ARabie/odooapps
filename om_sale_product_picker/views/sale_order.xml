<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="mode">form</attribute>
                <attribute name="widget">one2many_product_picker</attribute>
                <attribute name="options">{
                    'edit_discount': True,
                    'show_discount': True,
                    'ignore_warning': True,
                    'search': [{'name': 'Name', 'domain': [['name', 'ilike', '$search']]}] ,
                    'groups': [{'name': 'a-z', 'string': _('A-Z'), 'order': [{'name': 'name', 'asc': true}]},
                               {'name': 'z-a', 'string': _('Z_A'), 'order': [{'name': 'name', 'asc': false}]}]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form" position="replace">
               <form>
                    <field name="state" invisible="1" />
                    <field name="display_type" invisible="1" />
                    <field name="currency_id" invisible="1" />
                    <field name="product_uom_category_id" invisible="1" />
                    <field name="company_id" invisible="1" />
                    <field name="discount" widget="numeric_step" options="{'max': 100}" invisible="1"/>
                    <field name="price_unit" widget="numeric_step" invisible="1"/>
                    <field name="name" invisible="1" />
                    <field name="product_id" invisible="1" />
                    <field name="order_id" invisible="1"/>
                    <field name="product_uom_qty" class="mb-1" widget="numeric_step" context="{
                        'partner_id': parent.partner_id,
                        'quantity': product_uom_qty,
                        'pricelist': parent.pricelist_id,
                        'uom': product_uom,
                        'company_id': parent.company_id
                    }" />
                    <field name="product_uom" force_save="1" attrs="{
                        'readonly': [('state', 'in', ('sale','done', 'cancel'))],
                        'required': [('display_type', '=', False)],
                    }" context="{'company_id': parent.company_id}" class="mb-2" options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
                </form>
            </xpath>
        </field>
    </record>

</odoo>
